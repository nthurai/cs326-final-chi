{
  "compilerOptions": {
    "target": "es2016",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true, // good idea not to disable
    "pretty": true,
    "module": "commonjs",
    "outDir": "./lib"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
