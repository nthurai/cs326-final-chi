{
  "compilerOptions": {
    "target": "es2017",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true, // good idea not to disable
    "pretty": true,
    "module": "commonjs",
    "outDir": "./lib"
  },
  "include": ["typescript_files/*"],
  "exclude": ["node_modules", "lib", "static"]
}